<h1>Create New Page</h1>

<% if @article.errors.any? %>
  <ul>
  <%= @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <%end %>
  </ul>
<% end %>

<%= form_for @article, html: {class: "nifty_form"} do |f| %>
  <p>
    <%= f.label :title  %></br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %></br>
    <%= f.text_area :description %>
  </p>
  
  <p><%= f.submit %></p>
<% end %>