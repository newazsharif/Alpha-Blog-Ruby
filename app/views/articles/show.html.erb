<h2 align = "center">
    <%= @article.title %>
  </h2>
  <div class = "well">
    <ul class = "listing">
    <div class = "row" align ="center">
      
      <div class = " col-md-4 col-md-offset-4">
        <li><%= gravatar_for(@article.user,150) %></li>
        <li><%= link_to @article.user.username, user_path(@article.user) %></li>
        <li><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small></li>
      </div>
      
    </div>
    </ul>
    
    <article>
        <%= @article.description %>
      
    </article>
  <hr>
  <div class = "row action-style">
      <strong><%= link_to "Article List", articles_path,class: "btn btn-info btn-xs" %><strong>
      <% if logged_in? && @article.user == current_user %>
        <strong><%= link_to  "Edit Article", edit_article_path(@article.id),class: "btn btn-success btn-xs" %></strong>
        <strong><%= link_to "Delete" ,article_path(@article.id) ,class: "btn btn-danger btn-xs", method: :delete , data: {confirm: "are you sure?"}%></strong>
      <% end %>
  </div>
</div>

