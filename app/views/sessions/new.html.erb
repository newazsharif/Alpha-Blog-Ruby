<h2 align = "center">Login Form</h2>

<div class = "row">
  <div class = "col-md-12">
    
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class = "form-group">
        <div class = "control-label col-md-2">
          <%= f.label :email  %>
        </div>
        <div class = "col-md-8">
          <%= f.text_field :email , class: "form-control", autofocus: true %>
        </div>
      </div>
      <div class = "form-group">
        <div class = "control-label col-md-2">
          <%= f.label :password %></br>
        </div>
        <div class = "col-md-8">
          <%= f.password_field :password , class: "form-control" %>
        </div>
      </div>
      
      <div class = "col-md-offset-2 col-md-2">
        <%= f.submit "Login",:class => "btn btn-info" %>
      </div>
    <% end %>
  </div>
</div>