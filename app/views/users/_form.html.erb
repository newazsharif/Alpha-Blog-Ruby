<%= render "/layouts/errormessage", obj: @user %>





<div class = "row">
  <div class = "col-md-12">
    
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class = "form-group">
        <div class = "control-label col-md-2">
          <%= f.label :username  %>
        </div>
        <div class = "col-md-8">
          <%= f.text_field :username , class: "form-control", autofocus: true %>
        </div>
      </div>
      <div class = "form-group">
        <div class = "control-label col-md-2">
          <%= f.label :email %></br>
        </div>
        <div class = "col-md-8">
          <%= f.email_field :email , class: "form-control" %>
        </div>
      </div>
      <div class = "form-group">
        <div class = "control-label col-md-2">
          <%= f.label :password %></br>
        </div>
        <div class = "col-md-8">
          <%= f.password_field :password , class: "form-control" %>
        </div>
      </div>
      
      <div class = "col-md-offset-2 col-md-2">
        <%= f.submit(@user.new_record? ? "Sign Up" : "Update User", class: "btn btn-success") %>
      </div>
    <% end %>
    <div class="col-md-2 ">
      <%= link_to "Go for Articles List", articles_path ,class: "btn btn-info" %>
    </div>
  </div>
</div>