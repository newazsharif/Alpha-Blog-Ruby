<h2 align = "center">All alpha bloggers</h2>

<div align="center">
  <%= will_paginate %>
</div>

<div align = "center">
    <div class = "row">
    <ul class = "listing">
      <% @users.each do |user| %>
        <div class = "well col-md-4 col-md-offset-4">
          
          
            <li><%= link_to gravatar_for(user,100), user_path(user) %></li>
            <li><%= link_to user.username ,user_path(user)%></li>
            <% if logged_in? && current_user.admin? %>
              <li><%= link_to "Delete user", user_path(user), :method => :delete, 
              :data => {:confirm => "Are you sure want to delete the User?"} %></li>
            <% end %>
            <li><small> <%= pluralize(user.articles.count,"article") if user.articles%></small></li>
          
        </div>
      <% end %>
    </ul>
  </div>
</div>

<div align="center">
  <%= will_paginate %>
</div>