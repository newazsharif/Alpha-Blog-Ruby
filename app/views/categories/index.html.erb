<h2 align = "center">Categories List</h2>
<div align = "center">
  <div class = "row">
    <ul class = "listing">
     <% @categories.each do |category| %>
     <div class="well col-md-4 col-md-offset-4">
        <li class = "article-title" >
          <%= link_to category.name , category_path(category) %>
        </li>
      </div>
    </ul>
   <% end %>
  </div>
</div>