
<div class = "row">
 <div class = 'col-md-10 col-md-offset-1'> 
  <% flash.each do |name,msg|%>
  
    <div class = "alert alert-<%=name%>">
      <%= msg %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </div>
  
  <% end %>
  </div>
</div>
